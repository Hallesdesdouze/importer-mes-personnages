{
    "manifest_version": 3,
    "name": "Importer mes personnages",
    "version": "1.2",
    "description": "Permet d'inscrire ses personnages Dofus sur Halles des Douze depuis la boutique officielle.",
    "permissions": ["activeTab", "scripting"],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon-16.png",
            "48": "icons/icon-48.png",
            "128": "icons/icon-128.png"
        }
    },
    "icons": {
        "16": "icons/icon-16.png",
        "48": "icons/icon-48.png",
        "128": "icons/icon-128.png"
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "importer-mes-personnages@halles-des-douze.fr",
            "strict_min_version": "109.0"
        }
    }
}